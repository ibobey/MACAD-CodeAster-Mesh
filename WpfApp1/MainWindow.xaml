<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeAsterMesh"
        xmlns:hc="https://handyorg.github.io/handycontrol" xmlns:Presentation="clr-namespace:Macad.Presentation;assembly=Macad.Presentation" x:Class="CodeAsterMesh.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1100"
        Background="#0F1115">

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Sol taraf: Viewer -->
            <ColumnDefinition Width="*" MinWidth="300"/>
            <!-- Ayırıcı -->
            <ColumnDefinition Width="2"/>
            <!-- Sağ taraf: Properties -->
            <ColumnDefinition Width="350" MinWidth="260"/>
        </Grid.ColumnDefinitions>

        <!-- SOL: OCCT Viewer -->
        <Border Grid.Column="0" Background="#0B0D12">
            <local:OcctHwndControl x:Name="OcctControl"/>
        </Border>

        <!-- GRID SPLITTER (YATAY) -->
        <GridSplitter Grid.Column="1"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Background="#1E232D"
                      ShowsPreview="True"
                      Width="6"
                      ResizeBehavior="PreviousAndNext"
                      ResizeDirection="Columns"/>

        <!-- SAĞ: PROPERTIES PANEL -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <!-- Üst kısım -->
                <RowDefinition Height="*" MinHeight="100"/>
                <!-- Ayırıcı -->
                <RowDefinition Height="1"/>
                <!-- Alt kısım -->
                <RowDefinition Height="*" MinHeight="100"/>
            </Grid.RowDefinitions>

            <!-- ÜST PANEL -->
            <Border Grid.Row="0" Background="#fff"
                    BorderBrush="#40E6E8EE" BorderThickness="0.1,0,0,0.1">
                <!-- Üst tarafa istediğin elemanları ekleyebilirsin -->
            </Border>

            <!-- GRID SPLITTER (DİKEY) -->
            <GridSplitter Grid.Row="1"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="#1E232D"
                          ShowsPreview="True"
                          Height="6"
                          ResizeBehavior="PreviousAndNext"
                          ResizeDirection="Rows"/>

            <!-- ALT PANEL -->
            <Border Grid.Row="2" Background="#fff"
                    BorderBrush="#40E6E8EE" BorderThickness="0.1,0.1,0,0">





                <!-- DataGrid -->
                <DataGrid x:Name="myDataGrid"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    HeadersVisibility="Column"
                    GridLinesVisibility="None"
                    RowHeight="32"
                    ColumnHeaderHeight="36"
                    AlternationCount="2"
                    AlternatingRowBackground="#F3F4F6"
                    SelectionMode="Single"
                    SelectionUnit="FullRow"
                    SnapsToDevicePixels="True"
                    BorderThickness="1"
                    BorderBrush="#E1E4E8"
                    Background="White">

                    <!-- Başlık görünümü -->
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F7F8FA"/>
                            <Setter Property="Foreground" Value="#1F2937"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,0"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#E1E4E8"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <!-- Hücre görünümü -->
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="8,0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#EDEEF0"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F0F2F5"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#3B82F6"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <!-- Sütunlar -->
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Property"
                            Binding="{Binding Key}"
                            Width="2*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Value"
                            Binding="{Binding Value}"
                            Width="3*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>





            </Border>
        </Grid>
        <Presentation:PathButton Grid.Column="2" Content="PathButton" HorizontalAlignment="Left" Margin="403,373,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
